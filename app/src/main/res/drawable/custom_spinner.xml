<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape>
            <solid android:color="#FFFFFF" />

            <stroke
                android:width="1dp"
                android:color="#e2e0e0" />

            <padding
                android:bottom="10dp"
                android:left="2dp"
                android:right="10dp"
                android:top="10dp" />
        </shape>
    </item>

    <item>
        <bitmap
            android:gravity="end"
            android:src="@mipmap/ic_arrow" />
    </item>
</layer-list>